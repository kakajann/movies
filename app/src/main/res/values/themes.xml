<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Todolist" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary700</item>
        <item name="colorOnPrimary">@color/text</item>
        <item name="android:textColor">@color/text</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary700</item>
        <item name="colorOnSecondary">@color/text</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryDark</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/primaryDark</item>
    </style>
</resources>