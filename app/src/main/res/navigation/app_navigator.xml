    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigationHome">

    <fragment
        android:id="@+id/navigationHome"
        android:name="com.kakajann.movies.ui.home.HomeFragment"
        android:label="@string/common_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigationSearch"
        android:name="com.kakajann.movies.ui.search.SearchFragment"
        android:label="@string/common_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigationSettings"
        android:name="com.kakajann.movies.ui.settings.SettingsFragment"
        android:label="@string/common_settings"
        tools:layout="@layout/fragment_settings" />
